{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/pdf/convert",
      "dest": "/api/pdf/convert.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/pdf/extract-text",
      "dest": "/api/pdf/extract-text.js",
      "methods": ["POST", "OPTIONS"]
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}